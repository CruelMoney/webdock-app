<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00190F"
    android:padding="20dp">

    <!-- Top Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/webdock_logo"
        android:contentDescription="Webdock Logo" />

    <!-- Centered content takes the remaining space and centers vertically -->
    <LinearLayout
        android:id="@+id/centerBlock"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Slogan 1 -->
        <TextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our No-Nonsense App"
            android:textAlignment="center"
            android:textColor="#01FF48"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:textSize="@dimen/slogan_text_size"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp" />

        <!-- Slogan 2 -->
        <TextView
            android:id="@+id/slogan2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monitor. Manage. Create."
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/slogan_text_size"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="16sp"
            android:autoSizeMaxTextSize="32sp"
            android:autoSizeStepGranularity="2sp" />

        <!-- Spacer -->
        <Space
            android:layout_width="wrap_content"
            android:layout_height="24dp" />

        <!-- Server Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="30dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/server"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/bootsplash_logo"
                android:contentDescription="Server Image"/>
        </FrameLayout>

        <!-- Progress after server image -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:progressTint="@android:color/white"
            android:indeterminateTint="@android:color/white" />
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp"/>
    </LinearLayout>

</LinearLayout>
